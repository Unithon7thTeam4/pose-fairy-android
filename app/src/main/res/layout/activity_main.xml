<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="unithon4.com.posefairy.ui.main.MainActivity">

    <LinearLayout
        android:background="@mipmap/character_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/character_space"
            android:src="@mipmap/character_fairy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <Button
            android:id="@+id/sun"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/mon"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/tue"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/wed"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/thu"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/fri"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/sat"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@mipmap/gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_margin="20dp"
            android:background="@android:color/white"
            android:id="@+id/ex_picture_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
